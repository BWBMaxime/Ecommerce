{

    "/": "ProductController::home",
    "/products/{page_number}": "ProductController::home",
    "/product/{product_id}": "ProductController::product",
    "/cart": {
        "GET": "CartController::getCart",
        "POST": "CartController::updateProduct",
        "DELETE": "CartController::deleteProduct"
    },
    "/checkout": {
        "GET": "CheckoutController::getCheckout",
        "POST": "CheckoutController::updateCheckout"
    },
    "/checkout/finish": "CheckoutController::getFinish",
    "/session": {
        "GET": "SessionController::login",
        "POST": "SessionController::auth",
        "DELETE": "SessionController::logout"
    },
    "/user": {
        "GET":  "UserController::getUserProfile",
        "POST": "UserController::editUserProfile",
        "DELETE": "UserController::deleteUserProfile"
    },
    "/user/payment": {
        "GET":  "UserController::getUserPayment",
        "POST": "UserController::editUserPayment",
        "DELETE": "UserController::deleteUserPayment"
    },
    "/user/delivery": {
        "GET":  "UserController::getUserDelivery",
        "POST": "UserController::editUserDelivery",
        "DELETE": "UserController::deleteUserDelivery"
    }

}